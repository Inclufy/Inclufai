interface Lesson {
  id: string;
  title: string;
  duration: string;
  videoUrl?: string;
  type?: 'video' | 'quiz' | 'assignment' | 'reading' | 'exam' | 'certificate';
  resources?: { name: string; type: string; size: string; url?: string }[];
  transcript?: string;
  content?: string;
  keyTakeaways?: string[];
}

interface Module {
  id: string;
  title: string;
  lessons: Lesson[];
}

interface CourseData {
  id: string;
  title: string;
  icon: any;
  color: string;
  gradient: string;
  modules: Module[];
  totalLessons: number;
  totalDuration: string;
}

interface InteractiveSlide {
  id: string;
  title: string;
  content: string;
  visual?: 'diagram' | 'chart' | 'comparison' | 'list' | 'quote';
  question?: {
    text: string;
    options: string[];
    correct: number;
  };
}
