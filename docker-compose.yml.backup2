services:
  postgres:
    image: postgres:15-alpine
    container_name: projectpal-postgres
    ports:
      - "5432:5432"
    environment:
      - POSTGRES_DB=projextpal
      - POSTGRES_USER=projextpal
      - POSTGRES_PASSWORD=projextpal_password_2024
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - projectpal-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U projextpal"]
      interval: 5s
      timeout: 5s
      retries: 5
    restart: unless-stopped

  redis:
    image: redis:7-alpine
    container_name: projectpal-redis
    command: redis-server --requirepass redis_password_2024
    networks:
      - projectpal-network
    healthcheck:
      test: ["CMD", "redis-cli", "-a", "redis_password_2024", "ping"]
      interval: 5s
      timeout: 3s
      retries: 5
    restart: unless-stopped

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: projectpal-backend
    env_file:
      - ./backend/.env
    environment:
      - POSTGRES_HOST=postgres
      - REDIS_HOST=redis
      - ALLOWED_HOSTS=localhost,127.0.0.1,backend,projectpal-backend,projextpal.com,www.projextpal.com
      - FRONTEND_URL=https://projextpal.com
      - BASE_URL=https://projextpal.com
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    networks:
      - projectpal-network
    restart: unless-stopped

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: projectpal-frontend
    depends_on:
      - backend
    networks:
      - projectpal-network
    restart: unless-stopped

  proxy:
    image: nginx:alpine
    container_name: projectpal-proxy
    ports:
      - "8090:8090"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/conf.d/default.conf:ro
    depends_on:
      - backend
      - frontend
    networks:
      - projectpal-network
    restart: unless-stopped

networks:
  projectpal-network:
    driver: bridge

volumes:
  postgres_data:
